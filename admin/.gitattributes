# ============================
# Laravel Project .gitattributes
# ============================

# Force Unix-style line endings (LF) for all text files
* text=auto eol=lf

# PHP files
*.php      text eol=lf

# Blade templates
*.blade.php text eol=lf

# Frontend assets
*.js       text eol=lf
*.css      text eol=lf
*.scss     text eol=lf
*.ts       text eol=lf
*.vue      text eol=lf

# Config & env
*.env      text eol=lf
*.json     text eol=lf
*.yml      text eol=lf
*.yaml     text eol=lf
*.xml      text eol=lf
*.md       text eol=lf

# Ignore binary files (no EOL conversion)
*.jpg      binary
*.jpeg     binary
*.png      binary
*.gif      binary
*.ico      binary
*.pdf      binary
*.ttf      binary
*.woff     binary
*.woff2    binary
*.eot      binary
*.zip      binary

# OS / IDE files
*.exe      binary
*.dll      binary
*.so       binary
*.dylib    binary
